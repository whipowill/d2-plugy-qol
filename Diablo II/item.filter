// RUNES
//=================================================

//Runes up to Fal orange
ItemDisplay[RUNE<20]: %WHITE%o %ORANGE%%RUNENAME%%GRAY% %RUNENUM%

//Runes Lem to Gul Red, box on map
ItemDisplay[(RUNE>19 AND RUNE<26)]: %WHITE%oo %RED%%RUNENAME%%GRAY% %RUNENUM%

//Show a purple box on map for rune Vex and higher
ItemDisplay[RUNE>25]: %WHITE%ooo %PURPLE%%RUNENAME%%GRAY% %RUNENUM%

